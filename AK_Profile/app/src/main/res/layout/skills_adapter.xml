<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:id="@+id/adapter_LL"
    android:transitionName="@string/app_name">

    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/dimen_180sp"
        android:layout_height="150dp"
        app:cardCornerRadius="10dp"
        android:layout_margin="@dimen/dimen_5sp"
        android:padding="@dimen/dimen_10sp"
        app:cardElevation="3dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/img"
                android:layout_width="@dimen/dimen_180sp"
                android:layout_height="@dimen/dimen_180sp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_designation"/>

            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:background="@color/colorBlackT"
                android:layout_alignBottom="@+id/name_TV"
                android:layout_alignTop="@+id/name_TV"/>

            <TextView
                android:id="@+id/name_TV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="100 Order"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:fontFamily="@font/baumans"
                android:layout_alignParentBottom="true"/>




        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
